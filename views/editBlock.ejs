<%- include('layout/layoutStart.ejs') %>
<h1>Edit Block</h1>
<% if(query.message==="saved"){ %>
    <div class="alert alert-success my-4">
        Block was successfully saved
    </div>
<% } %>
<form action="/blocks/save/<%= data.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div>
        <label for="title">Title</label>
        <input name="title" id="title" type="text" value="<%= data.title %>">
    </div>
    <div>
        <label for="status">Status</label>
        <select name="status" id="status">
            <option <%= (data.status==0) ? 'selected' : '' %> value="0">Draft</option>
            <option <%= (data.status==1) ? 'selected' : '' %> value="1">Published</option>
        </select>
    </div>
    <input type="submit" value="save">
</form>
<%- include('layout/layoutEnd.ejs') %>