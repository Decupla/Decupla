<%- include('layout/layoutStart.ejs') %>
<main>
    <div class="d-flex">
        <h1>Content</h1>
        <div class="ml-4">
            <a href="/content/create"><button class="add-new">+ add new</button></a>
        </div>
    </div>
    <% if (query.message==="deleted") { %>
        <div class="alert alert-success mt-4">Content was deleted!</div>
    <% } %>
    <% for(var i=0; i<content.length; i++) {%>
        <div class="content" style="display: flex">
            <div class="title">
                <%= content[i].title %>
            </div>
            <form action="/content/<%= content[i].id %>" method="POST" enctype="application/x-www-form-urlencoded">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">delete</button>
            </form>
            <a href="/content/edit/<%= content[i].id %>"><button>edit</button></a>

        </div>
     <% } %>
</main>
<%- include('layout/layoutEnd.ejs') %>