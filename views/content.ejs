<%- include('layout/layoutStart.ejs') %>
    <h1>Content</h1>
    <a href="/content/create"><button>add new</button></a>
    <% for(var i=0; i<content.length; i++) {%>
        <div class="content" style="display: flex">
            <div class="title">
                <%= content[i].title %>
            </div>
            <form action="/content/delete/<%= content[i].id %>" method="POST" enctype="application/x-www-form-urlencoded">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">delete</button>
            </form>
            <a href="/content/edit/<%= content[i].id %>"><button>edit</button></a>

        </div>
     <% } %>
<%- include('layout/layoutEnd.ejs') %>