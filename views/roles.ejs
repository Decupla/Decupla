<%- include('layout/layoutStart.ejs') %>
<main>
    <div class="d-flex">
        <h1>Roles</h1>
        <div class="ml-4">
            <a href="/roles/create"><button class="add-new">+ add new</button></a>
        </div>
        <div class="d-flex ml-3">
            <a href="/users" class="mr-1"><button class="radio-link"><div class="radio-link-circle"></div>Users</button></a>
            <a href="/roles"><button class="radio-link"><div class="radio-link-circle active"></div>Roles</button></a>
        </div>
    </div>
    <% if (query.message==="deleted") { %>
        <div class="alert alert-success mt-4">Role was deleted!</div>
    <% } %>
    <table class="collection">
        <tr>
            <th>Name</th>
        </tr>
        <tr>
            <td>Administrator</td>
        </tr>
    <% for(var i=0; i<roles.length; i++) {%>
        <tr>
            <td>
                <%= roles[i].name %>
            </td>
            <td>
                <div class="d-flex justify-content-end">
                    <a class="pr-1" href="/roles/edit/<%= roles[i].id %>"><button><img src="/images/icons/edit.png" alt="edit"></button></a>
                    <form action="/roles/<%= roles[i].id %>" method="POST" enctype="application/x-www-form-urlencoded">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit"><img src="/images/icons/delete_red.png" alt="delete"></button>
                    </form>
                </div>
            </td>
        </tr>
     <% } %>
    </table>
</main>
<%- include('layout/layoutEnd.ejs') %>